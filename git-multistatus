#!/bin/bash

for item in *
do
    if [[ -d "${item}" ]]
    then
        cd "${item}"
        
        echo -e "\n##${NO_COLOR} ${item}"
        
        if [[ -z "$(git status -s)" ]]
        then
            echo -e "${GREEN}OK${NO_COLOR}"
        else
            git status -s
        fi
        
        cd - &> /dev/null
    fi
done

