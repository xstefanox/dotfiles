# current working directory
LP_COLOR_PATH="$BOLD_BLUE"       # as normal user
LP_COLOR_PATH_ROOT="$BOLD_RED"   # as root

# last error code
LP_COLOR_ERR="$BOLD_RED"

# show username only if different from the logged in
LP_USER_ALWAYS=0

# always show the full path
LP_ENABLE_SHORTEN_PATH=0

# go to a new line at the end of the prompt
LP_MARK_PREFIX="\n"

# color the tags
LP_COLOR_TAG="$CYAN"

# load the custom theme file
LP_PS1_FILE="${HOME}/.liquidprompt.ps1"
